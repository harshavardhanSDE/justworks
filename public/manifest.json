{
    "manifest_version": 3,
    "name": "JustWorks",
    "version": "1.0",
    "description": "A tab group manager that just works.",
    "background": {
        "service_worker": "service_worker.js"
    }, 
    "permissions": [
        "tabs", 
        "tabGroups", 
        "activeTabs",
        "scripting"
    ],
    "icons" : {
        "16": "icons/icon16.png", 
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }, 
    "action": {
        "default_popup": "./index.html",
        "default_icon" :"./icons/icon32.png"
    }, 
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./assets/content_scripts_render.js"]
        }
    ]
}